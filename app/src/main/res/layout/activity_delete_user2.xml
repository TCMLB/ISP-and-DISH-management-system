<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deleteUser2_Activity"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/large_logo"
            android:layout_marginTop="@dimen/padding_large"
            android:id="@+id/logo_id"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_editText_Id"
            android:drawableLeft="@drawable/id_icon"
            android:layout_below="@+id/logo_id"
            android:layout_marginTop="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_too_large"
            android:layout_marginLeft="@dimen/padding_too_large"
            android:hint="Serial No:"
            android:paddingLeft="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Delete User"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_login"
            android:textColor="@color/white"
            android:layout_below="@+id/id_editText_Id"
            android:layout_marginTop="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_too_large"
            android:layout_marginLeft="@dimen/padding_too_large"
            android:id="@+id/delete_user_id"/>



    </RelativeLayout>

</ScrollView>