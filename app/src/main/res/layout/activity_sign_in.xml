<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Welcome!"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="#d7873f"
            android:layout_marginTop="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_too_large"
            android:layout_marginLeft="@dimen/padding_too_large"
            android:id="@+id/welcome_Id"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/large_logo"
            android:layout_marginTop="@dimen/padding_large"
            android:id="@+id/logo_id"
            android:layout_below="@id/welcome_Id"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="SCTNBD Login:"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_login"
            android:textColor="@color/white"
            android:layout_below="@id/logo_id"
            android:layout_marginTop="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_too_large"
            android:layout_marginLeft="@dimen/padding_too_large"
            android:id="@+id/textViewId"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText1_Id"
            android:drawableLeft="@drawable/username_icon"
            android:layout_below="@+id/textViewId"
            android:layout_marginTop="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_too_large"
            android:layout_marginLeft="@dimen/padding_too_large"
            android:hint="Phone/Username:"
            android:paddingLeft="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small"/>
        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2_Id"
            android:drawableLeft="@drawable/password_icon"
            android:layout_below="@+id/editText1_Id"
            android:layout_marginTop="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_too_large"
            android:layout_marginLeft="@dimen/padding_too_large"
            android:hint="Password:"
            android:paddingLeft="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Login"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_login"
            android:textColor="@color/white"
            android:layout_below="@id/editText2_Id"
            android:layout_marginTop="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_too_large"
            android:layout_marginLeft="@dimen/padding_too_large"
            android:id="@+id/login_id"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Number of attempts remaining:"
            android:gravity="center_horizontal"
            android:textColor="#585555"
            android:layout_below="@+id/login_id"
            android:layout_marginTop="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_too_large"
            android:layout_marginLeft="@dimen/padding_too_large"
            android:id="@+id/attempt_status_id"/>


    </RelativeLayout>

</ScrollView>